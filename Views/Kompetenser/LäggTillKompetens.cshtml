@model KompetenserViewModel

<link rel="stylesheet" type="text/css" href="~/css/kompetenser.css">
<div class="container">
    <!-- Huvudrubrik -->
    <h2>Lägg till Kompetens</h2>

    <form asp-action="LäggTillKompetens" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Titel">Titel</label>
            <input asp-for="Titel" class="form-control" type="text" />
        </div>
        <div class="form-group">
            <label asp-for="Beskrivning">Beskrivning</label>
            <textarea asp-for="Beskrivning" class="form-control"></textarea>
        </div>
        <div class="form-group mb-4 mt-1">
            <input type="submit" value="Lägg Till" class="btn btn-success" />
        </div>
    </form>
</div>
