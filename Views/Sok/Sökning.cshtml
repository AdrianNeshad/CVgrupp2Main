
@{
    ViewData["Title"] = "Sökning";
}

<link rel="stylesheet" type="text/css" href="~/css/Sök.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<div class="login-container">
    <form asp-action="Sök" asp-controller="Sok">
        <h2>@ViewData["Title"]</h2>
        <div class="form-group">    
            <input type="text" name="sökning" class="form-control" placeholder="Sök:" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-search"></i> Sök
            </button>
        </div>
    </form>
</div>